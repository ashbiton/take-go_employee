<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightest">

    <LinearLayout
        android:layout_margin="15dp"
        android:background="@color/colorDarkest"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/TextViewPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:text="Car Number "
            android:paddingLeft="20dp"/>
        <TextView
            style="@style/TextViewPresent"
            android:id="@+id/car_present_car_number"
            android:ems="8"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/TextViewPresent"
            android:id="@+id/car_present_car_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:paddingLeft="20dp"
            android:paddingRight="4dp"/>
        <TextView
            style="@style/TextViewPresent"
            android:id="@+id/car_present_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingLeft="3dp"/>
    </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TextViewPresent"
                    android:id="@+id/car_present_car_kilometers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:ems="4"
                    android:text="2140"/>
                <TextView
                    style="@style/TextViewPresent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" kilometers"/>
            </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <TextView
            style="@style/TextViewPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Parks at "
            android:ems="5"/>
        <TextView
            style="@style/TextViewPresent"
            android:id="@+id/car_present_car_house"
            android:paddingRight="5dp"
            android:ems="3"
            android:text="10000"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextViewPresent"
            android:id="@+id/car_present_car_street"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Berkovitch"/>
    </LinearLayout>
        <TextView
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            style="@style/TextViewPresent"
            android:id="@+id/car_present_car_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tel Aviv"/>
    </LinearLayout>
</LinearLayout>