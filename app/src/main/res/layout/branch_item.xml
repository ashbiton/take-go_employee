<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/branch_present_branch_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkest"
            android:ems="3"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            style="@style/TextViewPresent"
            android:text="1234"/>
        <TextView
            android:id="@+id/branch_present_house"
            android:layout_width="wrap_content"
            android:textColor="@color/colorDarkest"
            style="@style/TextViewPresent"
            android:text="33"
            android:ems="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/branch_present_street"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorDarkest"
            style="@style/TextViewPresent"
            android:text="Berchnikovski"
            android:ems="5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/branch_present_city"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorDarkest"
            style="@style/TextViewPresent"
            android:text="Jerusalem"
            android:ems="6"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
        <TextView
            android:id="@+id/branch_present_parking"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="@color/colorDark"
            style="@style/TextViewPresent"
            android:textSize="15dp"
            android:text="480"
            android:ems="2"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorDark"
            style="@style/TextViewPresent"
            android:text=" parking spaces"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>